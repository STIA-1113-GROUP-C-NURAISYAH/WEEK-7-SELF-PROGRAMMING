package repetitionAndSelection;
import java.util.Scanner;
public class LoopPassword {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int x;
		int bankpw=12345;
		
		Scanner sc=new Scanner (System.in);
		for(int i=1;i>=0;i--) {
			System.out.print("Enter your password: ");
			x=sc.nextInt();
			
			if(x==bankpw) {
				System.out.println("Your password is correct.");
				
			}
			else if (i==1) {
				System.out.print("Your password is wrong! You have 1 chance. Please enter again: ");
				System.out.println();
				
			}
			else if(i==0) {
				System.out.print("Your account have beed blocked. Please contact our customer service.");
			}
    
        }
		
		sc.close();
	
	}
}
